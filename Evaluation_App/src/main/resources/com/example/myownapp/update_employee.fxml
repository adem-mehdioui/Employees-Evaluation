<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="updateemployee" alignment="TOP_CENTER" prefHeight="249.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myownapp.UpdateEmployeeController">
   <children>
      <Label alignment="CENTER" style="-fx-underline: true" text="Saisissez ID Employé" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>

      </Label>
      <GridPane vgap="10">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>


            <Label text="ID :" GridPane.rowIndex="1" />
            <Label text="Nom :" GridPane.rowIndex="2" />
            <Label text="Prénom :" GridPane.rowIndex="3" />
            <Label text="Service :" GridPane.rowIndex="4" />
            <Label text="Poste :" GridPane.rowIndex="5" />


            <TextField fx:id="tf_id" style="-fx-text-inner-color: #049bc9;  -fx-border-color: #049bc9; -fx-border-width: 3" GridPane.columnIndex="1" GridPane.rowIndex="1" onKeyPressed="#handle"/>
            <TextField fx:id="tf_nom" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="tf_prenom" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="tf_service" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="tf_poste" editable="false" layoutX="13.0" layoutY="79.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />





         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
      <HBox alignment="CENTER_LEFT" spacing="30.0" >
         <children>
            <Button fx:id="demissioner_btn" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #fc5252" text="Démissioner" HBox.hgrow="ALWAYS" />
            <Button fx:id="promouvoir_btn" alignment="CENTER" maxHeight="40.0" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8de5ff" text="Promouvoir" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
