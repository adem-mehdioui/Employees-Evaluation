<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.Region?>
<BorderPane fx:id="borderpane_login" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.myownapp.LoginController">
    <top>
        <Label maxWidth="Infinity" alignment="TOP_CENTER"
               style="-fx-border-color: #C8C8C8;
               -fx-border-width: 0 0 1 0;
               -fx-border-style: solid">
            <text>Authentification Utilisateur</text>
            <font>
                <Font name="Arial" size="20">
                </Font>
            </font>
            <padding>
                <Insets top="20" left="20" bottom="20" right="20"></Insets>
            </padding>
        </Label>
    </top>
    <center>

        <VBox spacing="10" alignment="CENTER">

            <HBox prefWidth="300" maxWidth="300" >
                <!-- Add Email Label -->
                <Label text="Email :" >
                    <font>
                        <Font name="Arial" size="15">
                        </Font>
                    </font>
                </Label>
            </HBox>
            <!-- Add Email Text Field -->
            <TextField fx:id="emailIdField" prefHeight="40" prefWidth="300" maxWidth="300"/>

            <HBox prefWidth="300" maxWidth="300" >
                <!-- Add Password Label -->
                <Label text="Mot de Passe :" >
                    <font>
                        <Font name="Arial" size="15">
                        </Font>
                    </font>
                </Label>
            </HBox>

            <!-- Add Password Field -->
            <PasswordField fx:id="passwordField" prefHeight="40" prefWidth="300" maxWidth="300"
            />
            <!-- Add Submit Button -->
            <Button fx:id="submitButton" text="Se connecter"
                    prefWidth="100" prefHeight="40" defaultButton="true"
                    onAction="#login"/>

        </VBox>


    </center>
    <bottom>


        <HBox alignment="CENTER">
        <Label maxWidth="Infinity" alignment="BOTTOM_CENTER"
               style="-fx-border-color: #C8C8C8;
               -fx-border-width: 1 0 0 0;
               -fx-border-style: solid">
            <text>UMCLAB Plus Constantine 2022</text>
            <padding>
                <Insets top="20" left="20" bottom="20" right="20"></Insets>
            </padding>
        </Label>
            <Region></Region>

            <Label maxWidth="Infinity" alignment="BOTTOM_CENTER"
                   style="-fx-border-color: #C8C8C8;
               -fx-border-width: 1 0 0 0;
               -fx-border-style: solid">
                <text>Developp√© par Mr.Mehdioui Mohamed Adem</text>
                <padding>
                    <Insets top="20" left="20" bottom="20" right="20"></Insets>
                </padding>
            </Label>

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>


    </bottom>
</BorderPane>
